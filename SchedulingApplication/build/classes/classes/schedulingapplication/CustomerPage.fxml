<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="572.0" prefWidth="745.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulingapplication.CustomerPageController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Customer Records">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TableView fx:id="customerTableView" layoutX="14.0" layoutY="51.0" prefHeight="475.0" prefWidth="582.0">
        <columns>
            <TableColumn fx:id="CustomerIDColumn" prefWidth="89.0" text="Customer ID">
                <cellValueFactory>
                    <PropertyValueFactory property="customerId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="NameColumn" prefWidth="152.0" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="customerName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="AddressColumn" prefWidth="198.0" text="Address">
                <cellValueFactory>
                    <PropertyValueFactory property="address" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="PhoneNumberColumn" prefWidth="142.0" text="Phone Number">
                <cellValueFactory>
                    <PropertyValueFactory property="phone" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <Button fx:id="exitButton" layoutX="621.0" layoutY="500.0" mnemonicParsing="false" onAction="#exitButtonHandler" prefHeight="25.0" prefWidth="76.0" text="Exit" />
   </children>
</AnchorPane>
