<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>


<AnchorPane id="AnchorPane" prefHeight="438.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulingapplication.AddCustomerController">
   <children>
      <Label layoutX="14.0" layoutY="28.0" text="Customer Name" />
      <Label layoutX="14.0" layoutY="68.0" text="Address" />
      <Label layoutX="14.0" layoutY="108.0" text="Phone Number" />
      <TextField fx:id="customerNameTextField" layoutX="125.0" layoutY="28.0" prefHeight="25.0" prefWidth="232.0" />
      <TextField fx:id="customerAddressTextField" layoutX="125.0" layoutY="68.0" prefHeight="25.0" prefWidth="232.0" />
      <TextField fx:id="customerPhoneNumberTextField" layoutX="125.0" layoutY="108.0" prefHeight="25.0" prefWidth="232.0" />
      <TableView fx:id="customerTableView" layoutX="18.0" layoutY="170.0" prefHeight="243.0" prefWidth="565.0">
        <columns>
          <TableColumn fx:id="CustomerIDColumn" prefWidth="75.0" text="Customer ID" >
                <cellValueFactory>
                    <PropertyValueFactory property="customerId" />
                </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="NameColumn" prefWidth="152.0" text="Customer Name" >
                <cellValueFactory>
                    <PropertyValueFactory property="customerName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="AddressColumn" prefWidth="198.0" text="Address" >
                <cellValueFactory>
                    <PropertyValueFactory property="address" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="PhoneNumberColumn" prefWidth="142.0" text="Phone Number" >
                <cellValueFactory>
                    <PropertyValueFactory property="phone" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <Button fx:id="addCustomerButton" layoutX="430.0" layoutY="28.0" mnemonicParsing="false" onAction="#addCustomerButtonHandler" prefHeight="25.0" prefWidth="110.0" text="Add Customer" />
      <Button fx:id="saveButton" layoutX="430.0" layoutY="68.0" mnemonicParsing="false" onAction="#saveButtonHandler" prefHeight="25.0" prefWidth="110.0" text="Save and Exit" />
      <Button fx:id="cancelButton" layoutX="430.0" layoutY="108.0" mnemonicParsing="false" onAction="#cancelButtonHandler" prefHeight="25.0" prefWidth="110.0" text="Cancel" />
   </children>
</AnchorPane>
